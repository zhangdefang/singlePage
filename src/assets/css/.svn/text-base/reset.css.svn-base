/* reset */
* {
  margin: 0;
  padding: 0;
}

html,
body,
#app {
  font-size: 16px;
  -webkit-text-size-adjust: none;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  overflow-y: auto;
  overflow-x: hidden;
  width: 100%;
  height: 100%;
  font-family: 'Source';
}

h1,
h2,
h3,
h4,
h5 {
  font-weight: normal;
}

i,
em,
b,
dt {
  font-style: normal;
  font-weight: normal;
}

li {
  list-style: none;
}

a {
  cursor: pointer;
  text-decoration: none;
  cursor: pointer;
  color: #333;
  -webkit-tap-highlight-color: transparent;
}

img,
fieldset {
  border: none;
  vertical-align: top;
}

table {
  border-collapse: collapse;
}

input,
textarea,
select {
  border: none;
  outline: none;
  color: #333;
  -webkit-appearance: none;
  appearance: none;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

button {
  cursor: pointer;
  outline: none;
  border: none;
}

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
  -webkit-appearance: none !important;
  margin: 0;
}
